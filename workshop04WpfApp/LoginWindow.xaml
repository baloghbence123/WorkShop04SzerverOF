<Window x:Class="workshop04WpfApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:workshop04WpfApp"
        mc:Ignorable="d"
        Title="LoginWindow" Height="175" Width="406">

    <StackPanel Margin="0,0,0,-80">
        <Label Content="Username" />
        <TextBox x:Name="tb_usr" TextWrapping="Wrap" VerticalAlignment="Top" />
        <Label Content="Password" />
        <TextBox x:Name="tb_pw" TextWrapping="Wrap" VerticalAlignment="Top" />
        <Label Content="Path" />
        <TextBox x:Name="tb_path" TextWrapping="Wrap"/>
        <Button Content="Login"  VerticalAlignment="Top"  Click="Button_Click"/>
        <Button Content="Sign up" Background="LightBlue" Click="Button_Click_1" />
    </StackPanel>
</Window>
